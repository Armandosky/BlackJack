      xmlns:local="clr-namespace:Informe1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>

        <Button Content="Play" Margin="321,326,321,68" Click="Button_Click" FontWeight="Bold" FontStyle="Italic" FontSize="24" BorderBrush="#FFB9A106" Foreground="White">
